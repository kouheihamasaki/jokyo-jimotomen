<div class="container add-font-rocknroll">
  <div class="row">
    <div class="col-12">
      <div>
        <h3 class="mt-3 midashi">
          <%= @community.title %>
          <%= link_to "編集する", edit_admin_community_path, class: 'btn btn-danger ml-5' %>
        </h3>
        <h5 class="font-blue">対象都道府県：<%= @community.prefecture %></h5>
        <h5><%= @community.introduction %></h5>
        <p><small class="text-muted">コミュニティ作成日：<%= @community.created_at.strftime('%Y/%m/%d') %></small></p>
      </div>
      <div>
        <h6 class="border-bottom">コメント件数：<%= @community.community_comment.count %></h6>
        <% @community_comments.each do |community_comment| %>
        <p class="">
          <%= community_comment.comment %>
        </p>
        <div class="text-right">
          <%= link_to "このコメントを削除する", admin_community_community_comment_path(community_comment.community, community_comment), method: :delete, class: 'btn btn-outline-secondary ml-3 mb-3' %>
        </div>
        <h6 class="mb-2 text-right border-bottom text-muted">
          <%= community_comment.user.screen_name %>
          <%= community_comment.created_at.strftime('%Y/%m/%d') %>
        </h6>
        <% end %>
      </div>
      <div>
        <%= paginate @community_comments %>
      </div>
    </div>
  </div>
</div>


<div>
  <p>コミュニティタイトル：<%= @community.title %></p>
  <p>対象都道府県：<%= @community.prefecture %></p>
  <p>コミュニティの説明：<%= @community.introduction %></p>
  <p>投稿日：<%= @community.created_at.strftime('%Y/%m/%d') %></p>
   <%= link_to "編集", edit_admin_community_path(@community), method: :get %>
   <%= link_to "削除", admin_community_path(@community), method: :delete %>
</div>

<div>
  <p>コメント件数：<%= @community.community_comment.count %></p>
  <% @community.community_comment.each do |community_comment| %>
    <%= community_comment.user.name %>
    <%= community_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
    <%= link_to "削除", post_image_post_comment_path(post_comment.post_image, post_comment), method: :delete %>
  <% end %>
</div>

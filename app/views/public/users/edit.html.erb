<div class="container mt-5 add-font">

  <h2>会員情報編集</h2>

  <%= form_with model: @user, url: information_users_path do |f| %>

    <div class="row mt-5">
      <p class="col-md-2">氏名</p>
      <div class="col-md-3">
        <%= f.text_field :last_name, autofocus: true, required: true, autocomplete: "last_name" %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :first_name, required: true, autocomplete: "first_name" %>
      </div>
    </div>

    <div class="row mt-1">
      <p class="col-md-2">フリガナ</p>
      <div class="col-md-3">
        <%= f.text_field :last_name_kana, required: true, autocomplete: "last_name_kana" %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :first_name_kana, required: true, autocomplete: "first_name_kana" %>
      </div>
    </div>
    
    <div class="row mt-1">
      <p class="col-md-2">ユーザー名</p>
      <div class="field col-md-9">
        <%= f.text_field :screen_name, required: true, autocomplete: "screen_name" %>
      </div>
    </div>

    <div class="row mt-1">
      <p class="col-md-2">自己紹介文</p>
      <div class="field col-md-9">
        <%= f.text_field :introduction, required: true, autocomplete: "introduction" %>
      </div>
    </div>
    <div class="row mt-3">
      <p class="col-md-3">好きな都道府県</p>
      <div class="field col-md-9">
        <%= f.select :prefecture, User.prefectures.keys, {} %>
      </div>
    </div>

    <div class="row mt-3">
      <p class="col-md-3">押し麺類</p>
      <div class="field col-md-9">
        <%= f.text_field :fav_noodle,required: true, autocomplete: "fav_noodle" %>
      </div>
    </div>

    <div class="row mt-1">
      <p class="col-md-2">メールアドレス</p>
      <div class="field col-md-9">
        <%= f.email_field :email, required: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="actions row mt-1">
      <div class="col-md-2"></div>
      <div class="field col-md-5">
        <%= f.submit "編集内容を保存", class: "btn btn-success" %>
      </div>
      <div class="col-md-3">
        <%= link_to '退会する', unsubscribe_users_path, class: "btn btn-danger" %>
      </div>
    </div>

  <% end %>

</div>
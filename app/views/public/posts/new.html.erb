
<h1>地元麺　投稿フォーム</h1>
  <%= form_with model: @post do |f| %>
    <h4>投稿タイトル</h4>
      <%= f.text_field :title %>
    <h4>ショップ名</h4>
      <%= f.text_field :shop_name %>
    <h4>投稿本文</h4>
      <%= f.text_area :body %>
      
    <h4>画像</h4>
    <%= f.file_field :image, accept: "image/*" %>
    <%= f.submit '投稿' %>
    
    
  <% end %>
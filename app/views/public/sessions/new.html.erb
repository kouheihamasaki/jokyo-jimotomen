<div class="container ml-5 add-font">
  
  <h2 class="mt-5">ログイン</h2>
  <h5 class="mt-3">会員の方はこちらからログイン</h2>

<%= form_with model: @user, url: user_session_path do |f| %>
<%= render "public/shared/error_messages", resource: resource %>

   <div class="row mt-4">
      <p class="col-md-3">メールアドレス</p>
      <div class="field col-md-9">
        <%= f.email_field :email, :size=>"72", autofocus: true, required: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="row mt-4">
      <p class="col-md-3">パスワード</p>
      <div class="field col-md-9">
        <%= f.password_field :password, :size=>"72", autocomplete: "current-password" %>
      </div>
    </div>

    <div class="actions row">
      <div class="col-md-3"></div>
      <div class="field col-md-9 mt-3">
        <%= f.submit "ログイン", class: "text-light btn-primary" %>
      </div>
    </div>
  <% end %>
  
  <div class="row">
    <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %>
  </div>
        

  <h5 class="mt-5">会員登録がお済みでない方</h2>
  <div class="row mt-3">
    <u><%= link_to "こちら", new_user_registration_path %></u>
    <span>から新規登録を行ってください。</span>
  </div>
</div>
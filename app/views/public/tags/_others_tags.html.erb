<%= f.collection_check_boxes(:tag_ids, tags, :id, :name) do |tag| %>
          <div class='form-check tag-input'>
            <%= tag.label class: 'form-check-label' do %>
              <%= tag.check_box class: 'form-check-input' %>
              <%= tag.text %>
            <% end %>
          </div>
        <% end %>
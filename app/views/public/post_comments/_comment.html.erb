<% post.post_comment.each do |post_comment| %>
    <p class="">
      <%= post_comment.comment %>
    </p>
    <div class="text-right">
      <% if post_comment.user == current_user %>
        <%= link_to "このコメントを削除する", post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true, class: 'btn btn-outline-secondary ml-3 mb-3' %>
      <% end %>
    </div>
    <h6 class="mb-2 text-right border-bottom text-muted">
      <%= post_comment.user.screen_name %>
      <%= post_comment.created_at.strftime('%Y/%m/%d') %>
    </h6>
  <% end %>
    <div class="add-font-rocknroll mb-3 border-bottom">
      <%= form_with(model: [post, post_comment], local: false) do |f| %>
        <%= f.text_area :comment, :size=>"75", placeholder: "コメントする" %>
        <%= f.submit "送信する" , class: 'btn btn-primary ml-1 mb-1' %>
      <% end %>
    </div>
